{
  "compilerOptions": {
    "strict": true,
    "lib": ["es5", "es6", "ES2021"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "content/*": ["./*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  }
}
